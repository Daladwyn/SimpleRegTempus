@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>
    Before registration you have to login or
    <a asp-action="Register" asp-controller="Account">register!</a>
</h2>

<form asp-action="Login" asp-controller="Account" method="post" class="form-horisontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserName" class="col-md-2 col-md-2 col-sm-2 control-label"></label>
        <div class="col-10 col-sm-10 col-md-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validatoion-for="UserName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Password" class="col-2 col-sm-2 col-md-2 control-label"></label>
        <div class="col-10 col-sm-10 col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-offset-2 col-sm-offset-2 col-md-offset-2 col-10 col-sm-10 col-md-10">
            <input type="submit" class="btn btn-primary" value="Log in" />
        </div>
    </div>
</form>



