@model List<RegTempus.ViewModels.PresentRegisteredTimeViewModel>

@{
    ViewData["Title"] = "PresentRegistrations";
    Layout = "~/Views/_Layout.cshtml";
}
<nav class="nav-bar navbar-expand-sm">
    <ul class="navbar-nav">
        <li class="nav-item">
            <form asp-controller="Home" asp-action="Index" method="post">
                <input class="btn btn-primary" type="submit" name="name" value="Time registration" />
            </form>
        </li>

        <li class="nav-item">
            <button class="btn btn-info">
                prev
            </button>
        </li>

        <li class="nav-item">
            <span class="navbar-brand">
                @ViewBag.Month
            </span>
        </li>
        @if (ViewBag.NextMonth != "")
        {
            <li class="nav-item">
                <button class="btn btn-primary">
                    Next
                </button>
            </li>
        }
    </ul>
</nav>
<hr />
<div class="row">
    <div class="col-1 col-sm-1 col-md-1">
        <span>Day</span>
    </div>
    <div class="col-3 col-sm-3 col-md-3">
        <span>Start</span>
    </div>
    <div class="col-3 col-sm-3 col-md-3">
        <span>Stop</span>
    </div>
    <div class="col-4 col-sm-4 col-md-4">
        <span>Break</span>
    </div>
</div>
<hr />
@foreach (var day in Model)
{

    <div class="row ">
        <div class="col-1 col-sm-1 col-md-1">
            @day.Day
        </div>
        <div class="col-3 col-sm-3 col-md-3">
            <div>
                @day.TimeStart.ToShortTimeString()
                <button class="" onclick="copyToClipboard('@day.TimeStart.ToShortTimeString()')">
                    <i class="far fa-copy"></i>
                </button>
            </div>

        </div>
        <div class="col-3 col-sm-3 col-md-3">
            <div>
                @day.TimeStop.ToShortTimeString()
                <button class="" onclick="copyToClipboard('@day.TimeStop.ToShortTimeString()')">
                    <i class="far fa-copy"></i>
                </button>
            </div>

        </div>
        <div class="col-4 col-sm-4 col-md-4">
            <div>
                @day.TimeBreakString
                <button class="" onclick="copyToClipboard('@day.TimeBreakString')">
                    <i class="far fa-copy"></i>
                </button>
            </div>
        </div>
    </div>
    <hr />
}